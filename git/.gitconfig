[user]
    email = hi@bas.sh
    name = Bas van den Wollenberg

[core]
    autocrlf = input
    editor = nvim
    pager = delta

[alias]
    showext = show --ext-diff
    logext = log --ext-diff

[credential]
    helper = store

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[vain]
    default = ba5

[interactive]
    diffFilter = delta --color-only

[delta]
    syntax-theme = Nord
    navigate = true

[difftool]
    prompt = false
    external = difft --display inline

[init]
    defaultBranch = main

[pull]
    rebase = true

[rebase]
    autostash = true

[merge]
    autoStash = true

[commit]
    verbose = true

[submodule]
    recurse = true

[push]
    autoSetupRemote = true

[rerere]
	enabled = true
